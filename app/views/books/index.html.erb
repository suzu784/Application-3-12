<h1>新規投稿</h1>

<% @books.each do |book| %>

<table>title:</table>
<tr><%= book.title %></tr>
 
<table>body</table>
<tr><%= book.body %></tr>

<%= link_to "show", book_path(book.id) %>
<%= link_to "edit", edit_book_path(book.id) %>


<% end %>

<h1>Books</h1>
<%= form_with model: @book do |f| %>
  <h2>New Book</h2>
  
 <h4>title</h4>
  <%= f.text_field :title %>
  
 <h4>body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit %>
<% end %>
  