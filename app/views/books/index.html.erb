<h1>Books</h1>

<table>
 <thead>
    <tr>
      <th>title</th>
      <th>Age</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "Show", book_path(book.id) %></td>
     <td><%= link_to "Edit", edit_book_path(book.id) %></td>
     <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
    </tr>
   <% end %>
  </tbody>

</table>

<%= form_with model: @book do |f| %>
  <h2>New Book</h2>
  
  <% if @book.errors.any? %>
   <%= @book.errors.count %>errors prohibited this book from being saved
   <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  <% end %>

 <h4>title</h4>
  <%= f.text_field :title %>

 <h4>body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit %>
<% end %>
